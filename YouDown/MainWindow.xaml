<Window x:Class="YouDown.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:expression="clr-namespace:System.Windows.Controls.Theming;assembly=System.Windows.Controls.Theming.ExpressionLight"
    Title="YouDown" Height="200" Width="400" ResizeMode="NoResize">
    <expression:ExpressionLightTheme>
        <Grid>
            <WrapPanel VerticalAlignment="Top" Margin="10,15">
                <TextBox Height="25" Width="220" Text="Filename" Margin="0,0,10,0" Name="FileText" TextChanged="FileText_TextChanged" />
                <Button Foreground="White" Content="Browse" Height="25" Width="50" Margin="0,0,10,0" Click="Browse_Click" />
                <Button Foreground="White" Content="Run" Height="25" Width="50" Click="Run_Click" Name="RunButton" />
            </WrapPanel>
            <Label Content="Select the file containing the list of videos" Foreground="White" Margin="10,50,0,0" Name="StatusLabel" />
            <ProgressBar Value="0" Height="20" Margin="10,15" VerticalAlignment="Bottom" Name="ProgressDown" />
            <ProgressBar Value="0" Height="20" Margin="10,40" VerticalAlignment="Bottom" Name="Progress" />
        </Grid>
    </expression:ExpressionLightTheme>
</Window>
